@model StudentGroupedRemarksViewModel

@{
    ViewData["Title"] = "Grouped Remarks";
}

<h2 class="text-center">@HtmlEncodeHelper.EscapeHtmlSpecialCharacters(Model.StudentName)'s Grouped Remarks</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Teacher</th>
                <th>Positive Remarks</th>
                <th>Negative Remarks</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.GroupedRemarks.Any())
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No remarks recorded.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.GroupedRemarks)
                {
                    <tr>
                        <td>@HtmlEncodeHelper.EscapeHtmlSpecialCharacters(item.SubjectName)</td>
                        <td>@HtmlEncodeHelper.EscapeHtmlSpecialCharacters(item.TeacherName)</td>
                        <td>@item.PositiveRemarksCount</td>
                        <td>@item.NegativeRemarksCount</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
