@model StudentRemarksViewModel

@using SchoolHub.Services
@inject ITeacherService teacherService

@{
    ViewData["Title"] = "Remarks";

    string teacherId = null;
    if (!this.User.IsAdmin() && !this.User.IsStudent())
    {
        teacherId = await this.teacherService.GetTeacherIdByUserIdAsync(this.User.GetId());
    }
}

<div class="container py-4">
    <h2 class="text-center">@Model.StudentName's Remarks</h2>

    @if (teacherId != null)
    {
        <a asp-controller="Remark" asp-action="Add" asp-route-studentId="@Model.Id" asp-route-teacherId="@teacherId" class="btn btn-outline-info btn-sm">Add a Remark</a>
    }

    @if (Model.Remarks.Any())
    {
        <table class="table table-bordered table-striped mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>Subject</th>
                    <th>Teacher</th>
                    <th>Comment</th>
                    <th>Type</th>
                    <th>Date</th>
                    @if (this.User.IsAdmin() ||
                        (teacherId != null && Model.Remarks.Any(x => x.TeacherId == teacherId)))
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var remark in Model.Remarks)
                {
                    <tr>
                        <td>@HtmlEncodeHelper.EscapeHtmlSpecialCharacters(remark.SubjectName)</td>
                        <td>@HtmlEncodeHelper.EscapeHtmlSpecialCharacters(remark.TeacherName)</td>
                        <td>@HtmlEncodeHelper.EscapeHtmlSpecialCharacters(remark.Comment)</td>
                        <td>
                            @if (remark.IsPraise)
                            {
                                <span class="badge bg-success">Praise</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Negative</span>
                            }
                        </td>
                        <td>@remark.Date</td>
                        @if (this.User.IsAdmin() ||
                            (teacherId != null && teacherId == remark.TeacherId))
                        {
                            <td>
                                <a asp-controller="Remark" asp-action="Edit" asp-route-id="@remark.Id" class="btn btn-warning btn-sm">
                                    Edit
                                </a>
                                <a asp-controller="Remark" asp-action="Delete" asp-route-id="@remark.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this remark?');">
                                    Delete
                                </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted mt-4">No remarks available for this student.</p>
    }

    <div class="text-center">
        <a asp-controller="Class" asp-action="AllStudentsDetails" asp-route-id="@Model.ClassId" class="btn btn-primary">Back to All Students</a>
    </div>
</div>
