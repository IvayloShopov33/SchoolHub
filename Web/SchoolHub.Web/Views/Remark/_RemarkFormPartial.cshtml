@model RemarkFormModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form method="post" class="needs-validation" novalidate>
                        <div class="form-group">
                            <label for="Comment" class="form-label">Comment</label>
                            <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Enter your remark" required></textarea>
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-3">
                            <label for="Date" class="form-label">Date</label>
                            <input asp-for="Date" type="date" class="form-control" min="2020-01-01" max="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-check mt-3">
                            <input asp-for="IsPraise" type="checkbox" class="form-check-input" id="IsPraise" />
                            <label class="form-check-label" for="IsPraise">Positive Remark</label>
                        </div>

                        <input asp-for="SubjectId" type="hidden" />
                        <input asp-for="StudentId" type="hidden" />
                        <input asp-for="TeacherId" type="hidden" />

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="Remark" asp-action="Index" asp-route-studentId="@Model.StudentId" class="btn btn-secondary">Back</a>
                            <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>