@model ClassFormModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4>@ViewData["Title"]</h4>
                </div>

                <form method="post" class="p-4 border rounded shadow-sm bg-light">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="font-weight-bold">Class Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter class name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="StartedOn" class="font-weight-bold">Start Date</label>
                        <input asp-for="StartedOn" class="form-control" type="date" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="StartedOn" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="EndingOn" class="font-weight-bold">End Date</label>
                        <input asp-for="EndingOn" class="form-control" type="date" min="2020-01-01" />
                        <span asp-validation-for="EndingOn" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg px-5">@ViewData["Title"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>