@model SchoolFormModel

<h2 class="text-center my-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" class="p-4 border rounded shadow-sm bg-light">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-bold">School Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter school name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Address" class="form-label fw-bold">Address</label>
                    <input asp-for="Address" class="form-control" placeholder="Enter address" />
                    <span asp-validation-for="Address" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="WebsiteUrl" class="form-label fw-bold">Website URL</label>
                    <input asp-for="WebsiteUrl" class="form-control" placeholder="Enter website URL" />
                    <span asp-validation-for="WebsiteUrl" class="text-danger small"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">@ViewData["Title"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
