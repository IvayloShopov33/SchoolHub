@model IEnumerable<SchoolHub.Data.Models.School>

@{
    ViewData["Title"] = "Schools List";
}

<h2>Schools List</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Website</th>
                <th>Teachers</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var school in Model)
            {
                <tr>
                    <td>@school.Name</td>
                    <td><a href="@school.WebsiteUrl" target="_blank">@school.WebsiteUrl</a></td>
                    <td>@school.Teachers.Count</td>
                    <td>
                        <a asp-controller="School" asp-action="Details" asp-route-id="@school.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-controller="School" asp-action="Edit" asp-route-id="@school.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-controller="School" asp-action="Delete" asp-route-id="@school.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this school?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
