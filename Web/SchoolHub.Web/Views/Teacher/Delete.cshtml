@model DeleteTeacherViewModel

@{
    this.ViewData["Title"] = "Delete a Teacher";
}

<div class="container my-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white text-center">
            <h3>Confirm Teacher Deletion</h3>
        </div>
        <div class="card-body p-4">
            <p class="lead text-center mb-4">Are you sure you want to delete this teacher?</p>

            <div class="row justify-content-center">
                <div class="col-md-6">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Full Name:</strong> @HtmlEncodeHelper.EscapeHtmlSpecialCharacters(Model.FullName)
                        </li>
                        <li class="list-group-item">
                            <strong>Birth Date:</strong> @Model.BirthDate
                        </li>
                    </ul>
                </div>
            </div>

            <div class="text-center mt-4">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="SchoolId" />
                    <button type="submit" class="btn btn-danger btn-lg mx-2">Delete</button>
                    <a asp-action="Index" asp-route-schoolId="@Model.SchoolId" class="btn btn-secondary btn-lg mx-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
