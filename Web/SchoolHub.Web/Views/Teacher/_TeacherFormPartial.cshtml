@model TeacherFormModel

<div class="container">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
    <form method="post" class="p-4 border rounded shadow-sm bg-light">
        <div class="form-row justify-content-center">
            <div class="form-group mb-3">
                <label asp-for="FullName" class="font-weight-bold"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="BirthDate" class="font-weight-bold"></label>
                <input asp-for="BirthDate" class="form-control" type="date" min="1950-01-01" max="@DateTime.Today.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
        </div>

        <input type="hidden" asp-for="SchoolId" />

        <div class="form-row justify-content-center">
            <div class="form-group mb-3">
                <label asp-for="ClassId" class="font-weight-bold">Class</label>
                <select asp-for="ClassId" class="form-control">
                    <option value="">-- Select Class --</option>
                    @foreach (var classItem in Model.Classes)
                    {
                        @if (classItem.Id == Model.ClassId)
                        {
                            <option value="@classItem.Id" selected>@classItem.Name</option>
                        }
                        else
                        {
                            <option value="@classItem.Id">@classItem.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row justify-content-center">
            <div class="form-group mb-3">
                <label asp-for="SubjectId" class="font-weight-bold">Subject</label>
                <select asp-for="SubjectId" class="form-control">
                    <option value="">-- Select Subject --</option>
                    @foreach (var subject in Model.Subjects)
                    {
                        @if (subject.Id == Model.SubjectId)
                        {
                            <option value="@subject.Id" selected>@subject.Name</option>
                        }
                        else
                        {
                            <option value="@subject.Id">@subject.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">@ViewData["Title"]</button>
        </div>
    </form>
</div>